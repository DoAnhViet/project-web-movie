@model List<WebMovie.Models.WatchHistory>
@{
    ViewData["Title"] = "Lịch sử xem phim";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-history"></i> Lịch sử xem phim</h2>
                <a href="/" class="btn btn-outline-primary">
                    <i class="fas fa-home"></i> Trang chủ
                </a>
            </div>

            @if (Model != null && Model.Any())
            {
                <div class="row">
                    @foreach (var history in Model)
                    {
                        <div class="col-md-3 col-sm-4 col-xs-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <a href="/Watch?slug=@history.MovieSlug&episode=@history.EpisodeSlug">
                                    <img src="@history.PosterUrl" class="card-img-top" alt="@history.MovieTitle" style="height: 250px; object-fit: cover;">
                                    
                                    <!-- Progress bar -->
                                    <div class="progress" style="height: 5px; border-radius: 0;">
                                        <div class="progress-bar bg-danger" role="progressbar" 
                                             style="width: @history.ProgressPercent%" 
                                             aria-valuenow="@history.ProgressPercent" 
                                             aria-valuemin="0" 
                                             aria-valuemax="100">
                                        </div>
                                    </div>
                                </a>
                                
                                <div class="card-body">
                                    <h5 class="card-title text-truncate" title="@history.MovieTitle">
                                        <a href="/Watch?slug=@history.MovieSlug&episode=@history.EpisodeSlug" class="text-decoration-none text-dark">
                                            @history.MovieTitle
                                        </a>
                                    </h5>
                                    
                                    <p class="card-text small text-muted mb-2">
                                        <i class="fas fa-film"></i> @history.EpisodeName
                                    </p>
                                    
                                    <p class="card-text small mb-2">
                                        <span class="badge bg-info text-dark">
                                            Đã xem: @history.ProgressPercent%
                                        </span>
                                        @if (history.IsCompleted)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check"></i> Hoàn thành
                                            </span>
                                        }
                                    </p>
                                    
                                    <p class="card-text small text-muted">
                                        <i class="far fa-clock"></i> 
                                        @if ((DateTime.UtcNow - history.LastWatchedAt).TotalMinutes < 60)
                                        {
                                            <text>@((int)(DateTime.UtcNow - history.LastWatchedAt).TotalMinutes) phút trước</text>
                                        }
                                        else if ((DateTime.UtcNow - history.LastWatchedAt).TotalHours < 24)
                                        {
                                            <text>@((int)(DateTime.UtcNow - history.LastWatchedAt).TotalHours) giờ trước</text>
                                        }
                                        else
                                        {
                                            <text>@((int)(DateTime.UtcNow - history.LastWatchedAt).TotalDays) ngày trước</text>
                                        }
                                    </p>
                                    
                                    <a href="/Watch?slug=@history.MovieSlug&episode=@history.EpisodeSlug" 
                                       class="btn btn-sm btn-primary w-100">
                                        <i class="fas fa-play"></i> Tiếp tục xem
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-film fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Chưa có lịch sử xem phim</h4>
                    <p class="text-muted">Bắt đầu xem phim để theo dõi tiến trình của bạn</p>
                    <a href="/" class="btn btn-primary mt-3">
                        <i class="fas fa-home"></i> Khám phá phim
                    </a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s, box-shadow 0.2s;
    }
    
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 15px rgba(0,0,0,0.2) !important;
    }
    
    .card-title a:hover {
        color: #007bff !important;
    }
</style>
