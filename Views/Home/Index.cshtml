@model WebMovie.Models.MovieListResponse
@{
    ViewData["Title"] = "Trang chủ";
}

<main id="main-contents" class="col-xs-12 col-sm-12 col-md-8">
    <!-- Trending Slider -->
    <div class="halim-trending-slider">
        <div class="section-bar clearfix">
            <h3 class="section-title"> <span><i class="fas fa-fire-alt halim-trending-icon"></i> Đang thịnh hành</span></h3>
        </div>
        <div class="halim-trending-container">
           <div class="halim-trending-track" style="transform: translateZ(0px); backface-visibility: hidden; scroll-behavior: smooth;">
                @{
                    var topMovies = new List<WebMovie.Models.MovieItem>();
                    if (Model?.Items != null)
                    {
                        // Sort by year to get latest movies
                        topMovies = Model.Items
                            .OrderByDescending(m => m.Year ?? 0)
                            .Take(10)
                            .ToList();
                    }
                }

                @if (topMovies != null && topMovies.Any())
                {
                    @for (int i = 0; i < topMovies.Count; i++)
                    {
                        var movie = topMovies[i];
                        <div class="halim-trending-card">
                            <a href="/Movie/Detail?slug=@movie.Slug" class="halim-trending-link">
                                <div class="halim-trending-poster-container">
                                    <img src="@movie.PosterUrl" alt="@movie.Name" class="halim-trending-poster-image" loading="lazy" />
                                    @if (!string.IsNullOrEmpty(movie.Quality))
                                    {
                                        <div class="halim-trending-badge">@movie.Quality</div>
                                    }
                                </div>
                                <div class="halim-trending-info" style="display:flex;align-items:center;">
                                    <div class="halim-trending-number">@((i + 1))</div>
                                    <div class="halim-trending-details">
                                        <h3 class="halim-trending-title-text">@movie.Name</h3>
                                        @if (!string.IsNullOrEmpty(movie.OriginName))
                                        {
                                            <p class="halim-trending-original-title">@movie.OriginName</p>
                                        }
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
           </div>
        </div>
    </div>
    
    <!-- Movie List Section -->
    <section class="movie-list-section">
        <div class="section-bar clearfix">
            <h3 class="section-title"><span>Phim Mới Cập Nhật</span></h3>
        </div>
        
        <div class="row">
            @if (Model?.Items != null && Model.Items.Any())
            {
                @* YÊU CẦU ĐỒ ÁN: Sử dụng View Component để hiển thị phim *@
                @foreach (var movie in Model.Items)
                {
                    @await Component.InvokeAsync("MovieCard", movie)
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="fas fa-film fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Không tìm thấy phim nào</h4>
                </div>
            }
        </div>
        
        <!-- Pagination -->
        @if (Model?.Pagination != null && Model.Pagination.TotalPages > 1)
        {
            <div class="pagination-container text-center mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.Pagination.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.Pagination.CurrentPage - 1)">
                                <i class="fas fa-chevron-left"></i> Trước
                            </a>
                        </li>
                    }
                    
                    @for (int i = Math.Max(1, Model.Pagination.CurrentPage - 2); 
                        i <= Math.Min(Model.Pagination.TotalPages, Model.Pagination.CurrentPage + 2); 
                        i++)
                    {
                        <li class="page-item @(i == Model.Pagination.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                    
                    @if (Model.Pagination.CurrentPage < Model.Pagination.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.Pagination.CurrentPage + 1)">
                                Sau <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        }
    </section>
</main>
