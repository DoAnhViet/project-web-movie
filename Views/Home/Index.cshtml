@model WebMovie.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Trang chủ";
}

<style>
    .halim-trending-poster-placeholder {
        width: 100%;
        padding-top: 150%;
        background: #1f2937;
        color: #9ca3af;
        display: flex;
        align-items: center;
        justify-content: center;
        border-radius: 6px;
    }
    .halim-trending-meta {
        margin: 4px 0 0;
        font-size: 0.85rem;
        color: #9ca3af;
    }
</style>

<main id="main-contents" class="col-xs-12 col-sm-12 col-md-8">
    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-warning">@ViewBag.ErrorMessage</div>
    }

    <!-- Trending Slider -->
    <div class="halim-trending-slider">
        <div class="section-bar clearfix">
            <h3 class="section-title"> <span><i class="fas fa-fire-alt halim-trending-icon"></i> Đang thịnh hành</span></h3>
        </div>
        <div class="halim-trending-container">
           <div class="halim-trending-track" style="transform: translateZ(0px); backface-visibility: hidden; scroll-behavior: smooth;">
                @if (Model?.TopWatched != null && Model.TopWatched.Any())
                {
                    @for (int i = 0; i < Model.TopWatched.Count; i++)
                    {
                        var movie = Model.TopWatched[i];
                        var displayTitle = System.Net.WebUtility.HtmlDecode(movie.Title ?? movie.Slug);
                        var displayOrigin = System.Net.WebUtility.HtmlDecode(movie.OriginTitle ?? string.Empty);
                        <div class="halim-trending-card">
                            <a href="/Movie/Detail?slug=@movie.Slug" class="halim-trending-link">
                                <div class="halim-trending-poster-container">
                                    @if (!string.IsNullOrEmpty(movie.PosterUrl))
                                    {
                                        <img src="@movie.PosterUrl" alt="@displayTitle" class="halim-trending-poster-image" loading="lazy" />
                                    }
                                    else
                                    {
                                        <div class="halim-trending-poster-placeholder">
                                            <i class="fas fa-image"></i>
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(movie.Quality))
                                    {
                                        <div class="halim-trending-badge">@movie.Quality</div>
                                    }
                                </div>
                                <div class="halim-trending-info" style="display:flex;align-items:center;">
                                    <div class="halim-trending-number">@((i + 1))</div>
                                    <div class="halim-trending-details">
                                        <h3 class="halim-trending-title-text">@displayTitle</h3>
                                        @if (!string.IsNullOrEmpty(displayOrigin))
                                        {
                                            <p class="halim-trending-original-title">@displayOrigin</p>
                                        }
                                        
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                }
           </div>
        </div>
    </div>
    
    <!-- Movie List Section -->
    <section class="movie-list-section">
        <div class="section-bar clearfix">
            <h3 class="section-title"><span>Phim Mới Cập Nhật</span></h3>
        </div>
        
        <div class="row">
            @if (Model?.LatestMovies?.Items != null && Model.LatestMovies.Items.Any())
            {
                @* YÊU CẦU ĐỒ ÁN: Sử dụng View Component để hiển thị phim *@
                @foreach (var movie in Model.LatestMovies.Items)
                {
                    @await Component.InvokeAsync("MovieCard", movie)
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="fas fa-film fa-3x text-muted mb-3"></i>
                    <h4 class="text-muted">Không tìm thấy phim nào</h4>
                </div>
            }
        </div>
        
        <!-- Pagination -->
        @if (Model?.LatestMovies?.Pagination != null && Model.LatestMovies.Pagination.TotalPages > 1)
        {
            <div class="pagination-container text-center mt-4">
                <ul class="pagination justify-content-center">
                    @if (Model.LatestMovies.Pagination.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.LatestMovies.Pagination.CurrentPage - 1)">
                                <i class="fas fa-chevron-left"></i> Trước
                            </a>
                        </li>
                    }
                    
                    @for (int i = Math.Max(1, Model.LatestMovies.Pagination.CurrentPage - 2); 
                        i <= Math.Min(Model.LatestMovies.Pagination.TotalPages, Model.LatestMovies.Pagination.CurrentPage + 2); 
                        i++)
                    {
                        <li class="page-item @(i == Model.LatestMovies.Pagination.CurrentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                    
                    @if (Model.LatestMovies.Pagination.CurrentPage < Model.LatestMovies.Pagination.TotalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.LatestMovies.Pagination.CurrentPage + 1)">
                                Sau <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        }
    </section>
</main>
