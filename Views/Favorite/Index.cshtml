@model List<WebMovie.Models.MovieItem>
@{
    ViewData["Title"] = "Phim yêu thích";
}

<div class="container mt-4">
    <h2><i class="fas fa-heart text-danger"></i> Phim yêu thích</h2>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-md-3 mb-4">
                    <a href="/Watch?slug=@movie.Slug" class="text-decoration-none">
                        <div class="card bg-dark text-white border-0 shadow-sm h-100">
                            <img src="@movie.PosterUrl" class="card-img-top" alt="@movie.Name" style="height: 280px; object-fit: cover;">
                            <div class="card-body p-3">
                                <p class="card-title mb-0 text-truncate">@movie.Name</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info mt-4">
            <i class="fas fa-heart-broken"></i> Bạn chưa có phim yêu thích nào. 
            <a href="/Movie/NewMovies" class="alert-link">Xem phim ngay!</a>
        </div>
    }
</div>