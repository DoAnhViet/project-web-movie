@model List<WebMovie.Models.UserViewModel>
@{
    ViewData["Title"] = "Quản lý người dùng";
    ViewData["Breadcrumb"] = "Quản lý người dùng";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-users"></i> Danh sách người dùng</h2>
    <a href="/Admin/CreateUser" class="btn btn-primary">
        <i class="fas fa-user-plus"></i> Thêm người dùng mới
    </a>
</div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Thông tin người dùng</th>
                        <th>Email</th>
                        <th>Ngày tạo</th>
                        <th>Vai trò</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div>
                                    <strong>@user.FullName</strong><br>
                                    <small class="text-muted">@user.UserName</small>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>@user.CreatedAt.ToString("dd/MM/yyyy")</td>
                            <td>
                                @if (user.Roles.Any())
                                {
                                    @foreach (var role in user.Roles)
                                    {
                                        <span class="badge bg-@(role == "Admin" ? "danger" : "primary") me-1">
                                            @role
                                        </span>
                                    }
                                }
                                else
                                {
                                    <span class="text-muted">Chưa có vai trò</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/Admin/EditUser/@user.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    
                                    <form method="post" action="/Admin/ToggleUserRole" class="d-inline">
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        <input type="hidden" name="role" value="Admin" />
                                        <button type="submit" class="btn btn-sm @(user.Roles.Contains("Admin") ? "btn-info" : "btn-success")">
                                            <i class="fas fa-@(user.Roles.Contains("Admin") ? "user-minus" : "user-plus")"></i>
                                            @(user.Roles.Contains("Admin") ? "Bỏ Admin" : "Thêm Admin")
                                        </button>
                                    </form>
                                    
                                    @if (user.Email != "admin@webmovie.com")
                                    {
                                        <form method="post" action="/Admin/DeleteUser/@user.Id" class="d-inline" 
                                              onsubmit="return confirm('Bạn có chắc chắn muốn xóa người dùng này?')">
                                            <button type="submit" class="btn btn-sm btn-danger">
                                                <i class="fas fa-trash"></i> Xóa
                                            </button>
                                        </form>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-users fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Chưa có người dùng nào</h4>
            <p class="text-muted">Hệ thống chưa có người dùng nào!</p>
        </div>
    }
