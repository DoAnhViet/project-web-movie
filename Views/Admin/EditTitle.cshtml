@model WebMovie.Models.CustomMovieTitle
@{
    ViewData["Title"] = string.IsNullOrEmpty(Model.MovieSlug) ? "Thêm tiêu đề mới" : "Chỉnh sửa tiêu đề";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-edit me-2"></i>
                        @(string.IsNullOrEmpty(Model.MovieSlug) ? "Thêm tiêu đề mới" : "Chỉnh sửa tiêu đề phim")
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.OriginalTitle))
                    {
                        <div class="alert alert-info mb-4">
                            <strong>
                                <i class="fas fa-info-circle me-2"></i>
                                Tiêu đề gốc từ API:
                            </strong> 
                            @Model.OriginalTitle
                        </div>
                    }

                    <form asp-action="EditTitle" method="post">
                        <div class="mb-3">
                            <label for="MovieSlug" class="form-label">
                                <i class="fas fa-link me-1"></i>
                                Slug phim <span class="text-danger">*</span>
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="MovieSlug" 
                                   name="MovieSlug" 
                                   value="@Model.MovieSlug" 
                                   required 
                                   readonly="@(!string.IsNullOrEmpty(Model.MovieSlug))"
                                   placeholder="vd: one-piece-dao-hai-tac">
                            <div class="form-text">
                                Slug là ID duy nhất của phim, lấy từ URL trên trang chi tiết phim
                            </div>
                            <span asp-validation-for="MovieSlug" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label for="OriginalTitle" class="form-label">
                                <i class="fas fa-file-alt me-1"></i>
                                Tiêu đề gốc
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="OriginalTitle" 
                                   name="OriginalTitle" 
                                   value="@Model.OriginalTitle"
                                   placeholder="Tự động lấy từ API nếu để trống">
                            <div class="form-text">
                                Tiêu đề gốc sẽ tự động lấy từ API khi lưu nếu để trống
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="CustomTitle" class="form-label">
                                <i class="fas fa-star me-1"></i>
                                Tiêu đề tùy chỉnh <span class="text-danger">*</span>
                            </label>
                            <input type="text" 
                                   class="form-control" 
                                   id="CustomTitle" 
                                   name="CustomTitle" 
                                   value="@Model.CustomTitle" 
                                   required
                                   placeholder="Nhập tiêu đề tiếng Việt hoặc tiêu đề tùy chỉnh">
                            <div class="form-text">
                                Tiêu đề này sẽ được hiển thị thay cho tiêu đề gốc từ API
                            </div>
                            <span asp-validation-for="CustomTitle" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label for="CustomDescription" class="form-label">
                                <i class="fas fa-align-left me-1"></i>
                                Mô tả tùy chỉnh (tùy chọn)
                            </label>
                            <textarea class="form-control" 
                                      id="CustomDescription" 
                                      name="CustomDescription" 
                                      rows="4"
                                      placeholder="Nhập mô tả tùy chỉnh cho phim (không bắt buộc)">@Model.CustomDescription</textarea>
                            <div class="form-text">
                                Mô tả này sẽ ghi đè mô tả từ API nếu được cung cấp
                            </div>
                        </div>

                        <hr class="my-4">

                        <div class="d-flex justify-content-between align-items-center">
                            <a href="@Url.Action("ManageMovies")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Quay lại
                            </a>
                            <div>
                                <a href="@Url.Action("Titles")" class="btn btn-outline-primary me-2">
                                    <i class="fas fa-list"></i> Xem danh sách
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Lưu tiêu đề
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.MovieSlug))
            {
                <div class="card shadow mt-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">
                            <i class="fas fa-eye me-2"></i>
                            Xem trước phim
                        </h5>
                    </div>
                    <div class="card-body">
                        <a href="/Movie/Detail?slug=@Model.MovieSlug" 
                           class="btn btn-outline-primary w-100" 
                           target="_blank">
                            <i class="fas fa-external-link-alt me-2"></i>
                            Xem chi tiết phim này trên trang web
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .card {
        border: none;
        border-radius: 10px;
    }
    
    .card-header {
        border-radius: 10px 10px 0 0 !important;
        padding: 1.25rem;
    }
    
    .form-label {
        font-weight: 600;
        color: #495057;
    }
    
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.25);
    }
    
    .alert {
        border-left: 4px solid;
        border-radius: 0.375rem;
    }
    
    .alert-info {
        border-left-color: #0dcaf0;
    }
</style>
