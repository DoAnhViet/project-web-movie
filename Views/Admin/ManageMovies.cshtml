@model List<WebMovie.Models.MovieItem>
@{
    ViewData["Title"] = "Quản lý phim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@Html.AntiForgeryToken()

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-film me-2"></i>
            Quản lý tiêu đề phim
        </h2>
        <a href="@Url.Action("Titles")" class="btn btn-secondary">
            <i class="fas fa-list"></i> Xem danh sách đã tùy chỉnh
        </a>
    </div>

    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Chọn phim để tùy chỉnh tiêu đề hiển thị hoặc ẩn phim khỏi website. Tiêu đề tùy chỉnh sẽ ghi đè tiêu đề gốc từ API.
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Không thể tải danh sách phim từ API.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm movie-card-admin">
                        <div class="position-relative">
                            <img src="@movie.PosterUrl" 
                                 alt="@movie.Name" 
                                 class="card-img-top" 
                                 style="height: 300px; object-fit: cover; @(ViewBag.HiddenMovieSlugs != null && ((List<string>)ViewBag.HiddenMovieSlugs).Contains(movie.Slug) ? "opacity: 0.5;" : "")"
                                 loading="lazy">
                            @if (!string.IsNullOrEmpty(movie.Quality))
                            {
                                <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2">
                                    @movie.Quality
                                </span>
                            }
                            @if (ViewBag.HiddenMovieSlugs != null && ((List<string>)ViewBag.HiddenMovieSlugs).Contains(movie.Slug))
                            {
                                <span class="badge bg-danger position-absolute top-0 end-0 m-2">
                                    <i class="fas fa-eye-slash"></i> Đã ẩn
                                </span>
                            }
                        </div>
                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="@movie.Name">
                                @movie.Name
                            </h6>
                            @if (!string.IsNullOrEmpty(movie.OriginName))
                            {
                                <p class="card-text text-muted small text-truncate" title="@movie.OriginName">
                                    @movie.OriginName
                                </p>
                            }
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i> @movie.Year
                                </small>
                            </p>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("EditTitle", new { slug = movie.Slug })" 
                                   class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Tùy chỉnh tiêu đề
                                </a>
                                <button type="button" 
                                        class="btn @(ViewBag.HiddenMovieSlugs != null && ((List<string>)ViewBag.HiddenMovieSlugs).Contains(movie.Slug) ? "btn-success" : "btn-warning") btn-sm toggle-hide-movie"
                                        data-slug="@movie.Slug">
                                    <i class="fas @(ViewBag.HiddenMovieSlugs != null && ((List<string>)ViewBag.HiddenMovieSlugs).Contains(movie.Slug) ? "fa-eye" : "fa-eye-slash")"></i> 
                                    <span class="toggle-text">@(ViewBag.HiddenMovieSlugs != null && ((List<string>)ViewBag.HiddenMovieSlugs).Contains(movie.Slug) ? "Hiển thị" : "Ẩn phim")</span>
                                </button>
                                <a href="/Movie/Detail?slug=@movie.Slug" 
                                   class="btn btn-outline-secondary btn-sm" 
                                   target="_blank">
                                    <i class="fas fa-external-link-alt"></i> Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @{
        var currentPage = ViewBag.CurrentPage ?? 1;
        var totalPages = ViewBag.TotalPages ?? 1;
        var totalItems = ViewBag.TotalItems ?? 0;
    }
    
    @if (totalPages > 1)
        {
            <div class="d-flex justify-content-between align-items-center mt-4 mb-2">
                <div class="text-muted">
                    Hiển thị trang @currentPage / @totalPages (@totalItems phim)
                </div>
            </div>
            <nav aria-label="Phân trang">
                <ul class="pagination justify-content-center">
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(currentPage - 1)">
                                <i class="fas fa-chevron-left"></i> Trước
                            </a>
                        </li>
                    }
                    
                    @{
                        var startPage = Math.Max(1, currentPage - 2);
                        var endPage = Math.Min(totalPages, currentPage + 2);
                    }
                    
                    @if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=1">1</a>
                        </li>
                        @if (startPage > 2)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }
                    
                    @for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                    
                    @if (endPage < totalPages)
                    {
                        @if (endPage < totalPages - 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" href="?page=@totalPages">@totalPages</a>
                        </li>
                    }
                    
                    @if (currentPage < totalPages)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(currentPage + 1)">
                                Sau <i class="fas fa-chevron-right"></i>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        }
    }
</div>

<style>
    .movie-card-admin {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .movie-card-admin:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15) !important;
    }
    
    .card-img-top {
        border-bottom: 3px solid #0d6efd;
    }
    
    .card-title {
        font-weight: 600;
        color: #212529;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('.toggle-hide-movie').on('click', function() {
                var $btn = $(this);
                var slug = $btn.data('slug');
                var $card = $btn.closest('.movie-card-admin');
                var $img = $card.find('.card-img-top');
                var $badge = $card.find('.badge.bg-danger');
                
                // Disable button during request
                $btn.prop('disabled', true);
                
                $.ajax({
                    url: '@Url.Action("ToggleHideMovie", "Admin")',
                    type: 'POST',
                    data: { slug: slug },
                    headers: {
                        'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                    },
                    success: function(response) {
                        if (response.success) {
                            // Update UI
                            if (response.isHidden) {
                                // Phim đã bị ẩn
                                $img.css('opacity', '0.5');
                                if ($badge.length === 0) {
                                    $card.find('.position-relative').append(
                                        '<span class="badge bg-danger position-absolute top-0 end-0 m-2"><i class="fas fa-eye-slash"></i> Đã ẩn</span>'
                                    );
                                }
                                $btn.removeClass('btn-warning').addClass('btn-success');
                                $btn.find('i').removeClass('fa-eye-slash').addClass('fa-eye');
                                $btn.find('.toggle-text').text('Hiển thị');
                            } else {
                                // Phim đã được hiển thị
                                $img.css('opacity', '1');
                                $badge.remove();
                                $btn.removeClass('btn-success').addClass('btn-warning');
                                $btn.find('i').removeClass('fa-eye').addClass('fa-eye-slash');
                                $btn.find('.toggle-text').text('Ẩn phim');
                            }
                            
                            // Show success message
                            if (typeof showToast === 'function') {
                                showToast(response.message, 'success');
                            } else {
                                alert(response.message);
                            }
                        } else {
                            alert('Có lỗi xảy ra: ' + (response.message || 'Unknown error'));
                        }
                    },
                    error: function() {
                        alert('Có lỗi xảy ra khi cập nhật trạng thái phim.');
                    },
                    complete: function() {
                        $btn.prop('disabled', false);
                    }
                });
            });
        });
    </script>
}
