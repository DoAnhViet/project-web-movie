@model List<WebMovie.Models.Movie>
@{
    ViewData["Title"] = "Quản lý phim";
    ViewData["Breadcrumb"] = "Quản lý phim";
    Layout = "_AdminLayout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-film"></i> Danh sách phim</h2>
    <a href="/Admin/CreateMovie" class="btn btn-primary">
        <i class="fas fa-plus"></i> Thêm phim mới
    </a>
</div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Poster</th>
                        <th>Tiêu đề</th>
                        <th>Thể loại</th>
                        <th>Năm</th>
                        <th>Quốc gia</th>
                        <th>Mô tả</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var movie in Model)
                    {
                        <tr>
                            <td>
                                <img src="@movie.PosterUrl" alt="@movie.Title" class="img-thumbnail" style="width: 60px; height: 80px; object-fit: cover;">
                            </td>
                            <td>
                                <strong>@movie.Title</strong>
                            </td>
                            <td>@movie.Genre</td>
                            <td>@movie.Year</td>
                            <td>@movie.Country</td>
                            <td>
                                <span class="text-truncate d-inline-block" style="max-width: 200px;" title="@movie.Description">
                                    @movie.Description
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="/Admin/EditMovie/@movie.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Sửa
                                    </a>
                                    <form method="post" action="/Admin/DeleteMovie/@movie.Id" class="d-inline" 
                                          onsubmit="return confirm('Bạn có chắc chắn muốn xóa phim này?')">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="fas fa-trash"></i> Xóa
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-film fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Chưa có phim nào</h4>
            <p class="text-muted">Hãy thêm phim đầu tiên vào hệ thống!</p>
            <a href="/Admin/CreateMovie" class="btn btn-primary">
                <i class="fas fa-plus"></i> Thêm phim mới
            </a>
        </div>
    }
