@model List<WebMovie.Models.MovieItem>
@{
    ViewData["Title"] = "Quản lý phim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>
            <i class="fas fa-film me-2"></i>
            Quản lý tiêu đề phim
        </h2>
        <a href="@Url.Action("Titles")" class="btn btn-secondary">
            <i class="fas fa-list"></i> Xem danh sách đã tùy chỉnh
        </a>
    </div>

    <div class="alert alert-info">
        <i class="fas fa-info-circle me-2"></i>
        Chọn phim để tùy chỉnh tiêu đề hiển thị. Tiêu đề tùy chỉnh sẽ ghi đè tiêu đề gốc từ API.
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Không thể tải danh sách phim từ API.
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    <div class="card h-100 shadow-sm movie-card-admin">
                        <div class="position-relative">
                            <img src="@movie.PosterUrl" 
                                 alt="@movie.Name" 
                                 class="card-img-top" 
                                 style="height: 300px; object-fit: cover;"
                                 loading="lazy">
                            @if (!string.IsNullOrEmpty(movie.Quality))
                            {
                                <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2">
                                    @movie.Quality
                                </span>
                            }
                        </div>
                        <div class="card-body">
                            <h6 class="card-title text-truncate" title="@movie.Name">
                                @movie.Name
                            </h6>
                            @if (!string.IsNullOrEmpty(movie.OriginName))
                            {
                                <p class="card-text text-muted small text-truncate" title="@movie.OriginName">
                                    @movie.OriginName
                                </p>
                            }
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="fas fa-calendar"></i> @movie.Year
                                </small>
                            </p>
                            <div class="d-grid gap-2">
                                <a href="@Url.Action("EditTitle", new { slug = movie.Slug })" 
                                   class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Tùy chỉnh tiêu đề
                                </a>
                                <a href="/Movie/Detail?slug=@movie.Slug" 
                                   class="btn btn-outline-secondary btn-sm" 
                                   target="_blank">
                                    <i class="fas fa-external-link-alt"></i> Xem chi tiết
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        @if (Model.Count >= 20)
        {
            <nav aria-label="Phân trang">
                <ul class="pagination justify-content-center mt-4">
                    @{
                        var currentPage = ViewBag.CurrentPage ?? 1;
                    }
                    @if (currentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(currentPage - 1)">
                                <i class="fas fa-chevron-left"></i> Trước
                            </a>
                        </li>
                    }
                    
                    @for (int i = Math.Max(1, currentPage - 2); i <= currentPage + 2; i++)
                    {
                        <li class="page-item @(i == currentPage ? "active" : "")">
                            <a class="page-link" href="?page=@i">@i</a>
                        </li>
                    }
                    
                    <li class="page-item">
                        <a class="page-link" href="?page=@(currentPage + 1)">
                            Sau <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                </ul>
            </nav>
        }
    }
</div>

<style>
    .movie-card-admin {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    
    .movie-card-admin:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15) !important;
    }
    
    .card-img-top {
        border-bottom: 3px solid #0d6efd;
    }
    
    .card-title {
        font-weight: 600;
        color: #212529;
    }
</style>
