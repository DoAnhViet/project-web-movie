@model WebMovie.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<style>
    .stat-card {
        border-radius: 12px;
        padding: 30px;
        transition: all 0.3s ease;
        border: 2px solid #e5e7eb;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        background: white;
        position: relative;
        overflow: hidden;
    }
    .stat-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        border-color: #000;
    }
    .stat-card .card-icon {
        font-size: 4rem;
        opacity: 0.08;
        position: absolute;
        right: 15px;
        top: 50%;
        transform: translateY(-50%);
        color: #000;
    }
    .stat-card h5 {
        font-size: 0.85rem;
        font-weight: 700;
        margin-bottom: 12px;
        color: #6b7280;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }
    .stat-card .display-6 {
        font-size: 2.8rem;
        font-weight: 800;
        margin: 0;
        color: #111827;
    }
    .info-card {
        background: white;
        border-radius: 12px;
        border: 2px solid #e5e7eb;
        box-shadow: 0 2px 8px rgba(0,0,0,0.08);
        transition: all 0.3s ease;
    }
    .info-card:hover {
        border-color: #000;
        box-shadow: 0 8px 20px rgba(0,0,0,0.12);
    }
    .info-card .card-header {
        background: #f9fafb;
        border-bottom: 2px solid #e5e7eb;
        padding: 20px 25px;
    }
    .info-card .card-header h5 {
        font-weight: 700;
        color: #111827;
        margin: 0;
        font-size: 1.1rem;
    }
    .table thead {
        background: #f9fafb;
        border-bottom: 2px solid #e5e7eb;
    }
    .table thead th {
        font-weight: 700;
        color: #374151;
        font-size: 0.85rem;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        padding: 15px;
    }
    .table tbody td {
        padding: 15px;
        color: #111827;
    }
    .badge {
        font-weight: 600;
        padding: 6px 12px;
        font-size: 0.9rem;
    }
    .bg-dark-badge {
        background-color: #111827 !important;
        color: white !important;
    }
</style>

<div class="row mt-2 g-4">
    <div class="col-md-6 col-lg-3">
        <div class="card stat-card">
            <i class="fas fa-users card-icon"></i>
            <div class="card-body p-0">
                <h5 class="card-title">Người dùng</h5>
                <p class="card-text display-6">@Model.TotalUsers</p>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card stat-card">
            <i class="fas fa-eye card-icon"></i>
            <div class="card-body p-0">
                <h5 class="card-title">Lượt xem (Tổng)</h5>
                <p class="card-text display-6">@Model.TotalWatchHistory</p>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card stat-card">
            <i class="fas fa-fire card-icon"></i>
            <div class="card-body p-0">
                <h5 class="card-title">Hôm nay</h5>
                <p class="card-text display-6">@Model.ViewsToday</p>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-lg-3">
        <div class="card stat-card">
            <i class="fas fa-comments card-icon"></i>
            <div class="card-body p-0">
                <h5 class="card-title">Bình luận</h5>
                <p class="card-text display-6">@Model.CommentsCount</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4 g-4">
    <div class="col-lg-6">
        <div class="card info-card h-100">
            <div class="card-header">
                <h5>
                    <i class="fas fa-database me-2"></i>
                    Thống kê phim từ API
                </h5>
            </div>
            <div class="card-body d-flex align-items-center justify-content-center" style="min-height: 200px;">
                <div class="text-center">
                    <i class="fas fa-film fa-3x mb-3" style="color: #e5e7eb;"></i>
                    <p class="text-muted mb-2" style="font-size: 0.95rem;">Tổng số phim có sẵn</p>
                    <h1 class="mb-0" style="font-size: 3.5rem; font-weight: 800; color: #111827;">@Model.TotalMoviesFromApi</h1>
                </div>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card info-card h-100">
            <div class="card-header">
                <h5>
                    <i class="fas fa-fire me-2"></i>
                    Top phim xem nhiều nhất
                </h5>
            </div>
            <div class="card-body">
                @if (Model.TopMovies?.Any() ?? false)
                {
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead>
                                <tr>
                                    <th style="width: 10%;" class="text-center">#</th>
                                    <th style="width: 65%;">
                                        <i class="fas fa-film me-1"></i>
                                        Tên phim
                                    </th>
                                    <th style="width: 25%;" class="text-center">
                                        <i class="fas fa-eye me-1"></i>
                                        Lượt xem
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @{int rank = 1;}
                                @foreach (var m in Model.TopMovies)
                                {
                                    <tr>
                                        <td class="text-center">
                                            <strong style="color: #6b7280;">@rank</strong>
                                        </td>
                                        <td>
                                            <div class="text-truncate" style="max-width: 350px;" title="@System.Net.WebUtility.HtmlDecode(m.Title)">
                                                <strong>@System.Net.WebUtility.HtmlDecode(m.Title)</strong>
                                            </div>
                                            <small class="text-muted">@m.Slug</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-dark-badge">@m.Views</span>
                                        </td>
                                    </tr>
                                    rank++;
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-inbox fa-3x mb-3" style="color: #e5e7eb;"></i>
                        <p class="text-muted mb-0">Chưa có dữ liệu lịch sử xem</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
