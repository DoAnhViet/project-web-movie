@model WebMovie.Models.AdminDashboardViewModel

@{
    ViewData["Title"] = "Dashboard";
    Layout = "_AdminLayout";
}

<div class="row mt-4">
    <div class="col-md-3">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">Người dùng</h5>
                <p class="card-text display-6">@Model.TotalUsers</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">Lượt xem (tổng)</h5>
                <p class="card-text display-6">@Model.TotalWatchHistory</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">Lượt xem hôm nay</h5>
                <p class="card-text display-6">@Model.ViewsToday</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card text-white bg-info mb-3">
            <div class="card-body">
                <h5 class="card-title">Bình luận</h5>
                <p class="card-text display-6">@Model.CommentsCount</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Phim (API)</h5>
                <p class="card-text">Tổng phim theo API: <strong>@Model.TotalMoviesFromApi</strong></p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title">Top phim (theo lịch sử xem)</h5>
                @if (Model.TopMovies?.Any() ?? false)
                {
                    <table class="table table-sm">
                        <thead>
                            <tr>
                                <th>Tiêu đề</th>
                                <th>Slug</th>
                                <th>Lượt xem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var m in Model.TopMovies)
                            {
                                <tr>
                                    <td>@m.Title</td>
                                    <td>@m.Slug</td>
                                    <td>@m.Views</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p class="text-muted">Chưa có dữ liệu.</p>
                }
            </div>
        </div>
    </div>
</div>
