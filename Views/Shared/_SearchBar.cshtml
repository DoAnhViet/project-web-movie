@* Views/Shared/_SearchBar.cshtml *@
<form asp-controller="Movie" asp-action="Search" method="get" class="d-flex search-form" role="search">
    <input class="form-control me-2" 
           type="search" 
           name="keyword" 
           placeholder="Tìm phim hoạt hình..." 
           value="@Context.Request.Query["keyword"]" 
           aria-label="Tìm kiếm phim"
           @(ViewBag.FocusSearch == true ? "autofocus" : "") />
    <button class="btn btn-danger" type="submit">
        <i class="fas fa-search"></i>
    </button>
</form>

<style>
    .search-form input {
        background-color: #3d3d3d;
        border: 1px solid #555;
        color: #fff;
        border-radius: 20px;
        padding: 8px 20px;
    }
    .search-form input::placeholder {
        color: #aaa;
    }
    .search-form input:focus {
        background-color: #444;
        border-color: #ff6b35;
        box-shadow: 0 0 0 0.2rem rgba(255, 107, 53, 0.25);
    }
    .search-form button {
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>