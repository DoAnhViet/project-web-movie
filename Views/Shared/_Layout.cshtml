<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HoạtHình3D</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .dropdown:hover .dropdown-menu {
            display: block;
        }
        .dropdown-menu {
            background-color: #2d2d2d;
            max-height: 400px;
            overflow-y: auto;
        }
        .dropdown-menu .dropdown-item {
            color: #fff;
        }
        .dropdown-menu .dropdown-item:hover {
            background-color: #3d3d3d;
            color: #ff6b35;
        }
        body {
            background-color: #1a1a1a;
            color: #fff;
        }
        .top-header {
            background-color: #2d2d2d;
            padding: 10px 0;
        }
        .logo {
            color: #ff6b35;
            font-size: 24px;
            font-weight: bold;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .logo img {
            height: 40px;
            width: auto;
        }
        .search-box {
            max-width: 500px;
            margin: 0 auto;
        }
        .search-box input {
            background-color: #3d3d3d;
            border: none;
            color: #fff;
            border-radius: 20px;
            padding: 8px 20px;
        }
        .search-box input::placeholder {
            color: #999;
        }
        .top-header .nav-icons a {
            color: #fff;
            font-size: 20px;
            margin-left: 20px;
        }
        .main-nav {
            background-color: #2d2d2d;
            padding: 12px 0;
            border-top: 1px solid #3d3d3d;
        }
        .main-nav .nav-link {
            color: #fff !important;
            padding: 8px 15px;
            display: inline-flex;
            align-items: center;
            gap: 8px;
        }
        .main-nav .nav-link:hover {
            color: #ff6b35 !important;
        }
        .main-nav .nav-link i {
            font-size: 16px;
        }
        .movie-card {
            margin-bottom: 20px;
        }
        .movie-card img {
            width: 100%;
            height: 280px;
            object-fit: cover;
            border-radius: 8px;
            transition: transform 0.3s;
        }
        .movie-card:hover img {
            transform: scale(1.05);
        }
        .movie-card .movie-title {
            margin-top: 8px;
            font-size: 14px;
            font-weight: 500;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .movie-card a {
            text-decoration: none;
            color: #fff;
        }
    </style>
</head>
<body>
    <header>
        <!-- Top header with logo, search, icons -->
        <div class="top-header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-2">
                        <a href="/" class="logo">
                            <img src="~/images/logo.png" alt="Logo" />
                        </a>
                    </div>
                    <div class="col-md-7">
                        <div class="search-box">
                            <form asp-controller="Movie" asp-action="Search" method="get">
                                <input type="text" name="keyword" class="form-control" placeholder="Search..." />
                            </form>
                        </div>
                    </div>
                    <div class="col-md-3 text-end nav-icons">
                        @if (User.Identity?.IsAuthenticated == true)
                        {
                            <a href="/Watch/History" title="Lịch sử"><i class="fas fa-history"></i></a>
                            <a href="#" title="Đánh dấu"><i class="fas fa-bookmark"></i></a>
                            <div class="dropdown d-inline">
                                <a href="#" class="dropdown-toggle" data-bs-toggle="dropdown">
                                    <i class="fas fa-user"></i>
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" href="/Account/Profile">Thông tin cá nhân</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" href="/Admin">Quản trị</a></li>
                                    }
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <form asp-controller="Account" asp-action="Logout" method="post">
                                            <button type="submit" class="dropdown-item">Đăng xuất</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                            <a href="/Account/Login" title="Đăng nhập"><i class="fas fa-sign-in-alt"></i></a>
                        }
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Main navigation -->
        <nav class="main-nav">
            <div class="container">
                <ul class="nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-home"></i> Trang chủ</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Movie/NewMovies"><i class="fas fa-film"></i> Phim Mới Cập Nhật</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-film"></i> Thể loại
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                            @if (ViewBag.Categories != null)
                            {
                                <li class="dropdown-item">@(((List<WebMovie.Models.Category>)ViewBag.Categories)?.Count ?? 0) categories loaded</li>
                                @foreach (var category in (List<WebMovie.Models.Category>)ViewBag.Categories)
                                {
                                    <li>
                                        <a class="dropdown-item" href="/Movie/Category?slug=@category.Slug">
                                            @category.Name
                                        </a>
                                    </li>
                                }
                            }
                            else 
                            {
                                <li class="dropdown-item">No categories loaded</li>
                            }
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="countryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="fas fa-globe"></i> Quốc gia
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="countryDropdown">
                            @if (ViewBag.Countries != null)
                            {
                                @foreach (var country in (List<WebMovie.Models.Category>)ViewBag.Countries)
                                {
                                    <li>
                                        <a class="dropdown-item" href="/Movie/Country?slug=@country.Slug">
                                            @country.Name
                                        </a>
                                    </li>
                                }
                            }
                            else
                            {
                                <li class="dropdown-item">Không có dữ liệu quốc gia</li>
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - WebMovie
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
