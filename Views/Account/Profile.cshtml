@model WebMovie.Models.ApplicationUser
@{
    ViewData["Title"] = "Trang cá nhân";
}

<link rel="stylesheet" href="~/css/profile.css" />

<div class="profile-wrapper">
    <div class="profile-card">
        <img class="profile-avatar" 
             src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(Model.FullName ?? "User")&size=150&background=e94560&color=ffffff&bold=true" 
             alt="@Model.FullName">

        <h2 class="profile-name">@Model.FullName</h2>
        <p class="profile-email">
            <i class="fas fa-envelope"></i> @Model.Email
        </p>

        @if (!string.IsNullOrEmpty(Model.PhoneNumber))
        {
            <p class="profile-phone">
                <i class="fas fa-phone"></i> @Model.PhoneNumber
            </p>
        }

        <div class="profile-info">
            <div class="info-item">
                <i class="fas fa-calendar-alt"></i>
                <span>Tham gia: @Model.CreatedAt.ToString("dd/MM/yyyy")</span>
            </div>
            @{
                var userManager = Context.RequestServices.GetService(typeof(Microsoft.AspNetCore.Identity.UserManager<ApplicationUser>)) as Microsoft.AspNetCore.Identity.UserManager<ApplicationUser>;
                var roles = await userManager!.GetRolesAsync(Model);
            }
            @if (roles.Any())
            {
                <div class="info-item">
                    <i class="fas fa-user-shield"></i>
                    <span>Vai trò: @string.Join(", ", roles)</span>
                </div>
            }
        </div>

        <form asp-action="Logout" asp-controller="Account" method="post" class="mt-3">
            <button type="submit" class="btn-logout">
                <i class="fas fa-sign-out-alt"></i> Đăng xuất
            </button>
        </form>
    </div>
</div>
