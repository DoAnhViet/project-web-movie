@model WebMovie.Models.LoginViewModel
@{
    ViewData["Title"] = "Đăng nhập";
}
<link rel="stylesheet" href="~/css/account.css" />

<!-- Gói phần đăng nhập trong khung căn giữa -->
<div class="account-wrapper">
    <div class="account-container">
        <div class="account-card">
            <h2 class="account-title">Đăng nhập tài khoản</h2>
            <p class="account-subtitle">Chào mừng bạn quay lại!</p>

            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="All" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">Mật khẩu</label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="RememberMe" class="form-check-input" />
                    <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                </div>

                <button type="submit" class="btn-account">Đăng nhập</button>

                
<div class="text-center my-3">
    <p>Hoặc</p>
</div>

<a href="~/signin-google" class="btn-google">
    <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google Logo" />
    Đăng nhập bằng Google
</a>
            </form>

            <div class="text-center mt-3">
                <p>Chưa có tài khoản?
                    <a asp-controller="Account" asp-action="Register" class="account-link">Đăng ký ngay</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
