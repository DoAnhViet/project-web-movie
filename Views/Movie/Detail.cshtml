@model WebMovie.Models.MovieDetailResponse
@using WebMovie.Services
@inject FavoriteService FavoriteService

@{
    ViewData["Title"] = Model?.Movie?.Name ?? "Chi tiết phim";

    var movie = Model?.Movie;
    var userId = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
    var isFavorite = false;

    if (movie != null && userId != null)
    {
        isFavorite = await FavoriteService.IsFavoriteAsync(userId, movie.Slug);
    }
}

<main id="main-contents" class="col-xs-12 col-sm-12 col-md-12">
    @Html.AntiForgeryToken()
    @if (movie != null)
    {
        <section class="movie-detail-section">
            <div class="container-fluid">
                <div class="row">
                    <!-- Movie Poster -->
                    <div class="col-md-3">
                        <div class="movie-poster">
                            <img src="@movie.PosterUrl" alt="@movie.Name" class="img-fluid rounded shadow">

                            <!-- Action Buttons -->
                            <div class="action-buttons mt-3 d-grid gap-2">
                                <a href="/Watch?slug=@movie.Slug" class="btn btn-danger btn-lg">
                                    Xem Phim Ngay
                                </a>

                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <button id="favorite-btn"
                                            class="btn @(isFavorite ? "btn-danger" : "btn-outline-light") w-100"
                                            data-slug="@movie.Slug"
                                            data-name="@movie.Name"
                                            data-poster="@movie.PosterUrl">
                                        <i class="fas @(isFavorite ? "fa" : "far") fa-heart"></i>
                                        @(isFavorite ? " Đã yêu thích" : " Yêu thích")
                                    </button>
                                }
                                else
                                {
                                    <a href="/Account/Login?returnUrl=@Context.Request.Path" class="btn btn-outline-secondary w-100">
                                        Đăng nhập để lưu yêu thích
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                    

                    <!-- Movie Info -->
                    <div class="col-md-9">
                        <div class="movie-info">
                            <h1 class="movie-title">@movie.Name</h1>
                            <p class="original-title text-muted">@movie.OriginName</p>
                            

                            <div class="movie-meta mb-3">
                                @if (!string.IsNullOrEmpty(movie.Quality))
                                {
                                    <span class="badge bg-warning text-dark me-2">@movie.Quality</span>
                                }
                                @if (!string.IsNullOrEmpty(movie.Lang))
                                {
                                    <span class="badge bg-info text-dark me-2">@movie.Lang</span>
                                }
                                @if (!string.IsNullOrEmpty(movie.EpisodeCurrent))
                                {
                                    <span class="badge bg-success me-2">@movie.EpisodeCurrent</span>
                                }
                                @if (movie.Year > 0)
                                {
                                    <span class="badge bg-secondary me-2">@movie.Year</span>
                                }
                                @if (!string.IsNullOrEmpty(movie.Time))
                                {
                                    <span class="badge bg-dark me-2"><i class="far fa-clock"></i> @movie.Time</span>
                                }
                            </div>
                            

                            <div class="movie-description mt-4">
                                <h3><i class="fas fa-align-left"></i> Nội dung phim</h3>
                                <div class="content">
                                    @Html.Raw(movie.Content)
                                </div>
                            </div>
                            

                            <div class="movie-details mt-4">
                                <div class="row">
                                    @if (movie.Category != null && movie.Category.Any())
                                    {
                                        <div class="col-md-6 mb-3">
                                            <strong><i class="fas fa-tags"></i> Thể loại:</strong>
                                            <div class="mt-2">
                                                @foreach (var cat in movie.Category)
                                                {
                                                    <a href="/the-loai/@cat.Slug" class="badge bg-primary me-1">@cat.Name</a>
                                                }
                                            </div>
                                        </div>
                                    }
                                    

                                    @if (movie.Country != null && movie.Country.Any())
                                    {
                                        <div class="col-md-6 mb-3">
                                            <strong><i class="fas fa-flag"></i> Quốc gia:</strong>
                                            <div class="mt-2">
                                                @foreach (var country in movie.Country)
                                                {
                                                    <a href="/quoc-gia/@country.Slug" class="badge bg-secondary me-1">@country.Name</a>
                                                }
                                            </div>
                                        </div>
                                    }
                                    

                                    @if (movie.Actor != null && movie.Actor.Any())
                                    {
                                        <div class="col-md-6 mb-3">
                                            <strong><i class="fas fa-users"></i> Diễn viên:</strong>
                                            <p class="mt-2">@string.Join(", ", movie.Actor)</p>
                                        </div>
                                    }
                                    

                                    @if (movie.Director != null && movie.Director.Any())
                                    {
                                        <div class="col-md-6 mb-3">
                                            <strong><i class="fas fa-video"></i> Đạo diễn:</strong>
                                            <p class="mt-2">@string.Join(", ", movie.Director)</p>
                                        </div>
                                    }
                                </div>
                            </div>
                            
                           
                            @* Episodes list: render under the trailer, grouped by server, 10 items per row *@
                            @if (Model.Episodes != null && Model.Episodes.Any())
                            {
                                <div class="episodes-section mt-4">
                                    <h3 class="d-flex justify-content-between align-items-center"><span><i class="fas fa-list-ol"></i> Danh sách tập</span></h3>
                                    <div class="mb-2 d-flex justify-content-end">
                                        <h3>Tìm tập nhanh</h3>
                                        <input id="episode-search" type="search" placeholder="Tìm tập (số hoặc tên)..." class="form-control episode-search" />
                                    </div>
                                    @foreach (var server in Model.Episodes)
                                    {
                                        <div class="server-block mb-3">
                                            <h5 class="server-name">@server.ServerName</h5>
                                                <div class="episodes-grid" data-server="@server.ServerName">
                                                    @foreach (var episode in server.ServerDataList)
                                                    {
                                                        <a href="/Watch?slug=@Uri.EscapeDataString(movie.Slug)&episode=@Uri.EscapeDataString(episode.Slug)" 
                                                           class="episode-item" 
                                                           title="@episode.Name">
                                                            @episode.Name
                                                        </a>
                                                    }
                                                </div>
                                        </div>
                                    }
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </section>
    }
    else
    {
        <div class="alert alert-danger">
            <p>Không tìm thấy thông tin phim</p>
        </div>
    }
</main>

<style>
    .movie-detail-section {
        color: #fff;
        padding: 30px 0;
        min-height: 100vh;
    }

    .movie-poster img {
        border: 3px solid #e94560;
    }

    .movie-title {
        color: #e94560;
        font-size: 2.5rem;
        font-weight: bold;
        text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
    }
    

    .original-title {
        font-size: 1.2rem;
        font-style: italic;
    }
    

    .movie-meta .badge {
        font-size: 0.9rem;
        padding: 0.5rem 1rem;
    }
    

    .movie-description h3,
    .movie-details strong {
        color: #e94560;
        margin-bottom: 15px;
    }
    

    .content {
        line-height: 1.8;
        font-size: 1.1rem;
    }
    

    .action-buttons .btn {
        font-size: 1.1rem;
        padding: 12px;
        font-weight: bold;
    }
    

    .movie-details a.badge:hover {
        opacity: 0.8;
        text-decoration: none;
    }

    /* Episode search input: left-align container and compact size */
    .episodes-section .mb-2.d-flex {
        justify-content: flex-start !important; /* override bootstrap justify-content-end */
        gap: 8px;
        align-items: center;
        flex-wrap: nowrap;
    }

    .episodes-section .mb-2 h3 {
        font-size: 1rem;
        margin: 0;
        color: #fff;
        font-weight: 600;
    }

    .episode-search {
        max-width: 180px;
        width: auto !important;
        display: inline-block;
        border-radius: 6px;
        padding: 6px 10px;
        font-size: 0.92rem;
        height: 36px;
        background: #222;
        color: #fff;
        border: 1px solid rgba(255,255,255,0.06);
    }
    .episode-search::placeholder { color: #aaa; }
    
    /* Reduce gap between episode items to 5px for compact layout */
    .episodes-grid .episode-item {
        background-color: #474747;
        margin: 5px; /* consistent spacing between items */
        display: inline-block; /* ensure horizontal flow */
    }

    .server-name { color: #f6b352; margin-bottom: 8px; }
</style>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/toastify-js/src/toastify.min.css">
    <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

    <script>
        (function () {
            // Favorite button handling
            function initFavoriteButton() {
                const btn = document.getElementById('favorite-btn');
                if (!btn) return;
                btn.addEventListener('click', function () {
                    const btn = this;
                    const slug = btn.dataset.slug;
                    const name = btn.dataset.name;
                    const poster = btn.dataset.poster;

                    btn.disabled = true;
                    const originalHTML = btn.innerHTML;

                    const formData = new FormData();
                    formData.append('slug', slug);
                    formData.append('name', name);
                    formData.append('posterUrl', poster);
                    const tokenInput = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (tokenInput) formData.append('__RequestVerificationToken', tokenInput.value);

                    fetch('/Movie/ToggleFavorite', {
                        method: 'POST',
                        body: formData
                    })
                        .then(r => r.json())
                        .then(data => {
                            if (data.success) {
                                const icon = data.isFavorite ? 'fas fa-heart' : 'far fa-heart';
                                const text = data.isFavorite ? ' Đã yêu thích' : ' Yêu thích';
                                btn.innerHTML = `<i class="${icon}"></i>${text}`;
                                btn.className = data.isFavorite ? 'btn btn-danger w-100' : 'btn btn-outline-light w-100';

                                Toastify({
                                    text: data.message,
                                    duration: 3000,
                                    gravity: "top",
                                    position: "right",
                                    backgroundColor: data.isFavorite ? "#28a745" : "#dc3545"
                                }).showToast();
                            } else {
                                btn.innerHTML = originalHTML;
                                Toastify({ text: "Lỗi! Thử lại.", backgroundColor: "red" }).showToast();
                            }
                        })
                        .catch(() => {
                            btn.innerHTML = originalHTML;
                            Toastify({ text: "Lỗi kết nối!", backgroundColor: "red" }).showToast();
                        })
                        .finally(() => {
                            btn.disabled = false;
                        });
                });
            }

            // Episode quick search: filter per server block, highlight matches and allow Enter to open first
            function initEpisodeSearch() {
                const input = document.getElementById('episode-search');
                if (!input) return;

                const serverBlocks = Array.from(document.querySelectorAll('.server-block'));

                // create match count badge
                let badge = document.getElementById('episode-match-count');
                if (!badge) {
                    badge = document.createElement('span');
                    badge.id = 'episode-match-count';
                    badge.className = 'badge bg-info text-dark ms-2';
                    input.parentNode.insertBefore(badge, input.nextSibling);
                }

                input.addEventListener('input', function (e) {
                    const q = (e.target.value || '').trim().toLowerCase();
                    let totalMatches = 0;

                    serverBlocks.forEach(sb => {
                        const grid = sb.querySelector('.episodes-grid');
                        if (!grid) return;
                        const eps = Array.from(grid.querySelectorAll('.episode-item'));
                        let matches = 0;
                        eps.forEach(ep => {
                            const text = (ep.textContent || ep.innerText || '').trim().toLowerCase();
                            const isMatch = !q || text.indexOf(q) !== -1;
                            ep.style.display = isMatch ? '' : 'none';
                            if (q && text.indexOf(q) !== -1) {
                                ep.classList.add('episode-match');
                                matches++;
                            } else {
                                ep.classList.remove('episode-match');
                            }
                        });

                        // show/hide server block depending on matches or empty query
                        sb.style.display = (!q || matches > 0) ? '' : 'none';
                        totalMatches += matches;
                    });

                    badge.textContent = q ? `${totalMatches} kết quả` : '';
                });

                // Enter to open first matched episode
                input.addEventListener('keydown', function (e) {
                    if (e.key === 'Enter') {
                        e.preventDefault();
                        const first = document.querySelector('.episode-item.episode-match');
                        if (first) first.click();
                    }
                });
            }

            // Initialize on DOM ready
            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', function () {
                    initFavoriteButton();
                    initEpisodeSearch();
                });
            } else {
                initFavoriteButton();
                initEpisodeSearch();
            }
        })();
    </script>

    <style>
        /* highlight matched episode */
        .episode-match {
            box-shadow: 0 0 0 2px rgba(246, 189, 59, 0.15) inset, 0 2px 6px rgba(0,0,0,0.3);
            border-radius: 4px;
            background-color: #f6b352 !important;
            color: #000 !important;
        }
    </style>
}
