@* YÊU CẦU ĐỒ ÁN: Razor Page với @page directive *@
@model WebMovie.Pages.ProfileModel
@{
    ViewData["Title"] = "Trang cá nhân";
}

<link rel="stylesheet" href="~/css/profile.css" />

<div class="profile-wrapper">
    <div class="profile-card">
        <img class="profile-avatar" 
             src="https://ui-avatars.com/api/?name=@Uri.EscapeDataString(Model.User?.FullName ?? "User")&size=150&background=e94560&color=ffffff&bold=true" 
             alt="@Model.User?.FullName">

        <h2 class="profile-name">@Model.User?.FullName</h2>
        <p class="profile-email">
            <i class="fas fa-envelope"></i> @Model.User?.Email
        </p>

        @if (!string.IsNullOrEmpty(Model.User?.PhoneNumber))
        {
            <p class="profile-phone">
                <i class="fas fa-phone"></i> @Model.User.PhoneNumber
            </p>
        }

        <div class="profile-info">
            <div class="info-item">
                <i class="fas fa-calendar-alt"></i>
                <span>Tham gia: @Model.User?.CreatedAt.ToString("dd/MM/yyyy")</span>
            </div>
            @if (Model.UserRoles.Any())
            {
                <div class="info-item">
                    <i class="fas fa-user-shield"></i>
                    <span>Vai trò: @string.Join(", ", Model.UserRoles)</span>
                </div>
            }
        </div>

        <div class="profile-actions">
            <a href="/Favorite" class="btn-profile-action btn-favorite">
                <i class="fas fa-heart"></i> Phim yêu thích
            </a>
            <a href="/Watch/History" class="btn-profile-action btn-history">
                <i class="fas fa-history"></i> Lịch sử xem
            </a>
        </div>

        <form asp-page-handler="Logout" method="post" class="mt-3">
            <button type="submit" class="btn-logout">
                <i class="fas fa-sign-out-alt"></i> Đăng xuất
            </button>
        </form>

        <div class="alert alert-info mt-3">
            <i class="fas fa-info-circle me-2"></i>
            <strong>YÊU CẦU ĐỒ ÁN:</strong> Đây là <strong>Razor Page</strong> (có @@page directive)
        </div>
    </div>
</div>
